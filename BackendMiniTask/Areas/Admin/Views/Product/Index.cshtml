@model List<ProductVM>


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="Create">Create Product</a>


            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Image</th>
                        <th> Name </th>
                        <th> Price </th>
                        <th> Category </th>
                        <th> Operation </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td> <img src="~/assets/images/@item.Image" /></td>
                            <td> @item.Name </td>
                            <td> @item.Price </td>
                            <td> @item.Category </td>
                            <td>
                                <a class="btn btn-info" asp-area="Admin" asp-controller="Product" asp-route-id="@item.Id" asp-action="Detail">Detail</a>
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-route-id="@item.Id" asp-action="Update">Update</a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-route-id="@item.Id" asp-action="Delete">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


            <div class="paginate-area  mt-4">
                <nav aria-label="...">
                    <ul class="pagination">

                        @if (ViewBag.currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.currentPage-1)">Previous</a>

                            </li>
                        }
                        else
                        {

                            <li class="page-item disabled">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.currentPage-1)">Previous</a>

                            </li>
                        }
                        @for (int i = 1; i <= @ViewBag.pageCount; i++)
                        {
                            <li class="page-item @(ViewBag.currentPage == i ? "disabled" : "") ">
                                <a class="page-link @(ViewBag.currentPage == i ? "page-active" : "")" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }


                        <li class="page-item ">
                            @if (ViewBag.currentPage < ViewBag.pageCount)
                            {
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.currentPage+1)">Next</a>

                            }
                            else
                            {
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                            }
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


