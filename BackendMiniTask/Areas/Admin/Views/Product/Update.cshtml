@model ProductUpdateVM


<div class="container mt-5">
 
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Name" class="form-control text-black" maxlength="20">
            <span class="text-danger" asp-validation-for="Name"></span>

            <label class="mt-4">Description</label>
            <input asp-for="Description" class="form-control text-black" maxlength="20">
            <span class="text-danger" asp-validation-for="Description"></span>
            <label class="mt-4">Price</label>
            <input asp-for="Price" class="form-control text-black" maxlength="20">
            <span class="text-danger" asp-validation-for="Price"></span>

            <label class="mt-4">Category</label>
            <select class="form-control text-black" asp-for="CategoryId" asp-items="@ViewBag.categories">
            </select>


        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a asp-action="Index" class="btn btn-primary text-white">Back</a>
    </form>
</div>


